{
  "mongo": {
    "main": {
      "db": "swallow",
      "host": "127.0.0.1",
      "port": 27017
    },
    "raw": {
      "db": "raw",
      "host": "127.0.0.1",
      "port": 27017
    }
  },
  "redis": {
    "port": "6379",
    "host": "127.0.0.1",
    "max": 10,
    "db": 0
  },
  "middleware": {
    "compress": {
      "enabled": true,
      "priority": 10,
      "module": "compression"
    },
    "favicon": {
      "priority": 30,
      "enabled": false
    },
    "static": {
      "priority": 40,
      "enabled": false
    },
    "logger": {
      "priority": 50,
      "enabled": true,
      "module": {
        "name": "morgan",
        "arguments": [
          ":response-time ms :remote-addr - :remote-user [:date[clf]] ':method :url HTTP/:http-version' :status :res[content-length] ':referrer' ':user-agent'"
        ]
      }
    },
    "json": {
      "priority": 60,
      "enabled": true,
      "module": {
        "name": "body-parser",
        "method": "json",
        "arguments": [
          {
            "limit": "1mb"
          }
        ]
      }
    },
    "urlencoded": {
      "enabled": false,
      "priority": 70,
      "module": {
        "name": "body-parser",
        "method": "urlencoded",
        "arguments": [
          {
            "extended": true
          }
        ]
      }
    },
    "multipart": {
      "enabled": false,
      "priority": 80,
      "module": "kraken-js/middleware/multipart"
    },
    "cookieParser": {
      "enabled": true,
      "priority": 90,
      "module": {
        "name": "cookie-parser",
        "arguments": [
          "baby_walker"
        ]
      }
    },
    "session": {
      "enabled": true,
      "priority": 100,
      "module": {
        "name": "path:./middleware/session",
        "arguments": [
          {
            "name": "bw.sid",
            "secret": "baby_walker",
            "cookie": {
              "path": "/",
              "httpOnly": true,
              // "secure": true,
              "maxAge": 604800000
              //失效时间
              //604800000
              //864e6  86400000
            },
            //"rolling": true,
            "resave": false,
            //每次都保存cookie变化，延长过期时间
            "saveUninitialized": true,
            //客户端没有cookie的情况下，生成cookie保存session
            "unset": "destroy",
            "proxy": false
          }
        ]
      }
    },
    "appsec": {
      "enabled": false,
      "priority": 110,
      "module": {
        "name": "lusca",
        "arguments": [
          {
            "csrf": {
              "cookie": "_csrf"
            },
            "xframe": "SAMEORIGIN",
            "p3p": false,
            "csp": false
          }
        ]
      }
    },
    "router": {
      "priority": 120,
      "module": {
        "name": "express-enrouten",
        "arguments": [
          {
            "directory": "path:./controllers"
          }
        ]
      }
    },
    "fileNotFound": {
      "priority": 130,
      "enabled": true,
      "module": {
        "name": "path:./middleware/404"
      }
    },
    "clientError": {
      "priority": 140,
      "enabled": true,
      "module": {
        "name": "path:./middleware/clientError"
      }
    },
    "serverError": {
      "priority": 141,
      "enabled": true,
      "module": {
        "name": "path:./middleware/serverError"
      }
    }
  }
}
